@page
@model EmployeeManager.RazorPages.Pages.Security.RegisterModel

<h2>Create New User Account</h2>
<form method="post">
    <table>
        <tr>
            <td><label asp-for="RegisterData.UserName"></label></td>
            <td><input asp-for="RegisterData.UserName" type="text" /></td>
        </tr>
        <tr>
            <td><label asp-for="RegisterData.Password"></label></td>
            <td><input asp-for="RegisterData.Password" type="password" /></td>
        </tr>
        <tr>
            <td><label asp-for="RegisterData.ConfirmPassword"></label></td>
            <td><input asp-for="RegisterData.ConfirmPassword" type="password" /></td>
        </tr>
        <tr>
            <td><label asp-for="RegisterData.Email"></label></td>
            <td><input asp-for="RegisterData.Email" type="email" /></td>
        </tr>
        <tr>
            <td><label asp-for="RegisterData.FullName"></label></td>
            <td><input asp-for="RegisterData.FullName" type="text" /></td>
        </tr>
        <tr>
            <td><label asp-for="RegisterData.BirthDate"></label></td>
            <td><input asp-for="RegisterData.BirthDate" type="date" /></td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit">Create</button>
            </td>
        </tr>
    </table>
    <div asp-validation-summary="All" class="message"></div>
    <h3><a asp-page="/Security/SignIn">Go to Sign In Page</a></h3>
</form>