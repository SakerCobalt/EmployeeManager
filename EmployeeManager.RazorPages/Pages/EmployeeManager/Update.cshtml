@page "{id:int}"
@model EmployeeManager.RazorPages.Pages.EmployeeManager.UpdateModel

<h2>Update Existing Employee</h2>
<h3 class="message">@Model.Message</h3>

@if (Model.DataFound)
{
    <form method="post">
        <table border="0">
            <tr>
                <td class="right"><label asp-for="Employee.EmployeeID"></label></td>
                <td>
                    <input type="hidden" asp-for="Employee.EmployeeID"/>
                    <span>@Model.Employee.EmployeeID</span>
                </td>
            </tr>
            <tr>
                <td class="right"><label asp-for="Employee.FirstName"></label></td>
                <td><input type="text" asp-for="Employee.FirstName" /></td>
                <span asp-validation-for="Employee.FirstName" class="message"></span>
            </tr>
            <tr>
                <td class="right"><label asp-for="Employee.LastName"></label></td>
                <td><input type="text" asp-for="Employee.LastName" /></td>
                <span asp-validation-for="Employee.LastName" class="message"></span>
            </tr>
            <tr>
                <td class="right"><label asp-for="Employee.Title"></label></td>
                <td><input type="text" asp-for="Employee.Title" /></td>
                <span asp-validation-for="Employee.Title" class="message"></span>
            </tr>
            <tr>
                <td class="right"><label asp-for="Employee.BirthDate"></label></td>
                <td><input type="date" asp-for="Employee.BirthDate" /></td>
                <span asp-validation-for="Employee.BirthDate" class="message"></span>
            </tr>
            <tr>
                <td class="right"><label asp-for="Employee.HireDate"></label></td>
                <td><input type="date" asp-for="Employee.HireDate" /></td>
                <span asp-validation-for="Employee.HireDate" class="message"></span>
            </tr>
            <tr>
                <td class="right"><label asp-for="Employee.Country"></label></td>
                <td>
                    <select asp-for="Employee.Country" asp-items="Model.Countries">
                        <option value="">Please Select</option>
                    </select>
                    <span asp-validation-for="Employee.Country" class="message"></span>
                </td>
                <span asp-validation-for="Employee.Country" class="message"></span>
            </tr>
            <tr>
                <td class="right"><label asp-for="Employee.Notes"></label></td>
                <td><textarea type="text" asp-for="Employee.Notes" rows="5" cols="40"></textarea></td>
                <span asp-validation-for="Employee.Notes" class="message"></span>
            </tr>
            <tr>
                <td colspan="2"><button type="submit">Save</button></td>
            </tr>
        </table>
    </form>

<br />
<a asp-page="List">Back to Employee Listing</a>
}
